<Page
    x:Class="NextPlayer.View.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NextPlayer.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    DataContext="{Binding MainVM, Mode=OneWay, Source={StaticResource Locator}}">

    <Page.Resources>
        <Thickness x:Key="TopMargin">4,0,4,8</Thickness>
        <Thickness x:Key="LeftMargin">4,0,4,8</Thickness>
        <Thickness x:Key="MiddleMargin">4,0,4,8</Thickness>
        <Thickness x:Key="RightMargin">4,0,4,8</Thickness>
    </Page.Resources>
    
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!--<Image 
            Grid.RowSpan="2"
            x:Name="imageBG"
            Stretch="UniformToFill"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            Source="/Assets/BG/wallpaper 7.jpg"
            />
        <Rectangle Grid.RowSpan="2" Fill="#80161616"/>-->
        <!-- Title Panel -->
        <StackPanel Grid.Row="0" Margin="19,0,0,0">
            <TextBlock x:Uid="AppName" Style="{ThemeResource TitleTextBlockStyle}" Margin="0,12,0,0"/>
            <TextBlock x:Uid="MainPageTitle" Text="main page" Margin="0,-6.5,0,26.5" Style="{ThemeResource HeaderTextBlockStyle}" CharacterSpacing="{ThemeResource PivotHeaderItemCharacterSpacing}"/>
        </StackPanel>

        <Grid Grid.Row="1" x:Name="ContentRoot" Margin="0,0,0,0">
            <Grid.ChildrenTransitions>
                <TransitionCollection>
                    <EntranceThemeTransition/>
                </TransitionCollection>
            </Grid.ChildrenTransitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                </Grid.ColumnDefinitions>
                <Button x:Uid="MenuNowPlayingPlaylist"
                        Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"
                        
                        Command="{Binding GoToNowPlayingListPage}" 
                        Margin="{StaticResource TopMargin}"
                        Style="{StaticResource ButtonStyleMainPage}">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <TextBlock x:Uid="MenuNowPlayingPlaylistTB"
                                Text="Now playing playlist"
                                       TextWrapping="WrapWholeWords"
                                       TextAlignment="Center"/>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
                
                <Button x:Uid="MenuAlbums" 
                        Grid.Row="1" Grid.Column="2" 
                        Content="Albums" 
                        Command="{Binding GoToAlbumsPage}" 
                        Margin="{StaticResource LeftMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuArtists" 
                        Grid.Row="1" Grid.Column="3" 
                        Content="Artists" 
                        Command="{Binding GoToArtistsPage}" 
                        Margin="{StaticResource MiddleMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuFolders" 
                        Grid.Row="2" Grid.Column="3" 
                        Content="Folders" 
                        Command="{Binding GoToFoldersPage}"
                        Margin="{StaticResource MiddleMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuGenres" 
                        Grid.Row="2" Grid.Column="2" 
                        Content="Genres" 
                        Command="{Binding GoToGenresPage}"
                        Margin="{StaticResource LeftMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuPlaylists" 
                        Grid.Row="3" Grid.Column="2" 
                        Content="Playlists" 
                        Command="{Binding GoToPlaylistsPage}"
                        Margin="{StaticResource MiddleMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuSongs" 
                        Grid.Row="3" Grid.Column="3" 
                        Content="Songs" 
                        Command="{Binding GoToSongsPage}" 
                        Margin="{StaticResource MiddleMargin}"
                        Style="{StaticResource ButtonStyleMainPage}">
                </Button>
                <Button x:Uid="MenuSettings" 
                        Grid.Row="3" Grid.Column="1" 
                        Content="Settings" 
                        Command="{Binding GoToSettingsPage}" 
                        Margin="{StaticResource LeftMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuSearch" 
                        Grid.Row="1" Grid.Column="1" Grid.RowSpan="2"
                        Content="Search" 
                        Command="{Binding GoToSearchPage}" 
                        Margin="{StaticResource LeftMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>
                <Button x:Uid="MenuStop" 
                        Grid.Row="0" Grid.Column="1"
                        Content="Stop" 
                        Command="{Binding Stop}" 
                        Margin="{StaticResource LeftMargin}"
                        Style="{StaticResource ButtonStyleMainPage}"/>

            </Grid>
            <Grid Grid.Row="1" Margin="0,0,0,0"
                 >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Image Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                   Margin="20,0,0,0"
                           Width="80"
                           Height="80"
                           Source="{Binding Cover}"
                           DoubleTapped="Image_DoubleTapped"
                           />
                <Button Grid.Row="0" Grid.Column="1"
                            Command="{Binding GoToNowPlaying}"
                            Style="{StaticResource ButtonStyleEmpty}"
                            MinHeight="40"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Padding="4,0,4,0"
                            >
                    <TextBlock
                            Text="{Binding Title}"
                            TextTrimming="CharacterEllipsis"
                            FontSize="18"
                            VerticalAlignment="Center"
                            Height="Auto"
                        />
                </Button>

                <Button Grid.Row="1" Grid.Column="1"
                            Command="{Binding GoToNowPlaying}"
                            Style="{StaticResource ButtonStyleEmpty}"
                            MinHeight="40"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            Padding="4,0,4,0">
                    <TextBlock 
                            Text="{Binding Artist}"
                            TextTrimming="CharacterEllipsis"
                            FontSize="16"
                            VerticalAlignment="Center"
                            Height="Auto"
                        />
                </Button>

                <Button Grid.RowSpan="2" Grid.Column="2"
                            Command="{Binding NextClick}"
                            Style="{StaticResource ButtonStyleEmptyN}"
                            Foreground="{StaticResource PhoneAccentBrush}"
                            Content="&#xE101;"
                            FontFamily="Segoe UI Symbol" 
                            FontSize="36"
                            VerticalAlignment="Top"
                            VerticalContentAlignment="Center"
                            HorizontalAlignment="Center"
                            MinWidth="72"
                            MinHeight="72"
                            Width="72"
                            Height="72"
                            Margin="0,0,20,0"
                            Padding="0"
                        >
                    <!--<Image Source="/Assets/Buttons/Dark/MainNextButton.png" Height="80" Width="80"/>-->
                </Button>
                
            </Grid>
        </Grid>
        
    </Grid>
</Page>
